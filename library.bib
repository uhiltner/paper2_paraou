doi = {10.1016/j.dendro.2011.01.005},
file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/de Luis et al.{\_}2011{\_}Climate factors promoting intra-annual density fluctuations in Aleppo pine (Pinus halepensis) from semiarid sites.pdf:pdf},
isbn = {1125-7865},
