file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Guitet et al.{\_}2015{\_}Spatial structure of above-ground biomass limits accuracy of carbon mapping in rainforest but large scale forest inve.pdf:pdf},
