file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Bontemps, Esper{\_}2011{\_}Statistical modelling and RCS detrending methods provide similar estimates of long-term trend in radial growth of c.pdf:pdf},
isbn = {1125-7865},
issn = {11257865},
journal = {Dendrochronologia},
keywords = {Dendrochronology,Fagus sylvatica,Growth trends,Standardisation,Statistical modelling},
month = {jan},
number = {2},
pages = {99--107},
title = {{Statistical modelling and RCS detrending methods provide similar estimates of long-term trend in radial growth of common beech in north-eastern France}},
