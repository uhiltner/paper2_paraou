@article{Gibbs2007a,
abstract = {Reducing carbon emissions from deforestation and degradation in developing countries is of central$\backslash$r importance in efforts to combat climate change. Key scientific challenges must be addressed to$\backslash$r prevent any policy roadblocks. Foremost among the challenges is quantifying nations' carbon$\backslash$r emissions from deforestation and forest degradation, which requires information on forest clearing$\backslash$r and carbon storage. Here we review a range of methods available to estimate national-level forest$\backslash$r carbon stocks in developing countries. While there are no practical methods to directly measure all$\backslash$r forest carbon stocks across a country, both ground-based and remote-sensing measurements of forest$\backslash$r attributes can be converted into estimates of national carbon stocks using allometric relationships.$\backslash$r Here we synthesize, map and update prominent forest biomass carbon databases to create the first$\backslash$r complete set of national-level forest carbon stock estimates. These forest carbon estimates expand$\backslash$r on the default values recommended by the Intergovernmental Panel on Climate Change's National$\backslash$r Greenhouse Gas Inventory Guidelines and provide a range of globally consistent estimates.},
