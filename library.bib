issn = {17083087},
keywords = {CSA-SFM,Canadian Standards Association - Sustainable Fores,FSC,Forest Stewardship Council,Forest certification,Meta-analysis,Public forests,SFI,Sustainable Forestry Initiative,Sustainable forest management},
