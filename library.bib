isbn = {0012-8252},
issn = {00128252},
journal = {Earth-Science Reviews},
keywords = {Deforestation,Desertification,Ethiopia,Human impact,Land degradation,Late Quaternary,Sediment deposition,Soil erosion},
month = {feb},
number = {3-4},
pages = {273--320},
title = {{Human impact on the environment in the Ethiopian and Eritrean highlands—a state of the art}},
