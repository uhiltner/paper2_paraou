school = {Universit{\"{a}}t Osnabr{\"{u}}ck},
title = {{Simulating carbon dynamics with an individual-based forest model under current and future climate conditions: a case study in the Amazon rainforest, Paracou, Fench Guiana.}},
type = {Master Thesis},
year = {2017}
