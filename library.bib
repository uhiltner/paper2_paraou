file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Strobl, Fetene, Beck{\_}2011{\_}Analysis of the shelter tree-effect of natural and exotic forest canopies on the growth of young Podocarpus fa.pdf:pdf},
isbn = {0931-1890},
issn = {09311890},
journal = {Trees - Structure and Function},
keywords = {Ethiopia,Exotic plantations,Growth,Photosynthesis,Podocarpus falcatus,Shelter tree effect},
number = {5},
pages = {769--783},
title = {{Analysis of the "shelter tree-effect" of natural and exotic forest canopies on the growth of young Podocarpus falcatus trees in southern Ethiopia}},
