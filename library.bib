isbn = {1932-6203 (Electronic)$\backslash$r1932-6203 (Linking)},
issn = {19326203},
journal = {PLoS ONE},
number = {9},
pages = {1--20},
pmid = {26406907},
title = {{Resilience and alternative stable states of tropical forest landscapes under shifting cultivation regimes}},
url = {http://dx.doi.org/10.1371/journal.pone.0137497},
volume = {10},
