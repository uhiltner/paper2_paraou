file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Kang, Yang, Qin{\_}2012{\_}Recent tree-growth reduction in north central China as a combined result of a weakened monsoon and atmospheric osci.pdf:pdf},
issn = {0165-0009},
journal = {Climatic Change},
