file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Richter et al.{\_}2009{\_}Reasons for an outstanding plant diversity in the tropical Andes of Southern Ecuador.pdf:pdf},
isbn = {18651542},
issn = {18651542},
journal = {Landscape Online},
keywords = {tropical mountain forest,vascular plant diversity},
pages = {1--35},
title = {{Reasons for an outstanding plant diversity in the tropical Andes of Southern Ecuador}},
