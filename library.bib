file = {:C$\backslash$:/Arbeit/Literaturdatenbank{\_}priv/Brienen, Zuidema, Mart{\'{i}}nez-Ramos{\_}2010{\_}Attaining the canopy in dry and moist tropical forests strong differences in tree growth trajector.pdf:pdf},
isbn = {0044200915405},
issn = {0029-8549},
journal = {Oecologia},
keywords = {Canopy accession,Cedrela odorata,Gap dynamics,Growth suppression,Tree rings},
month = {jun},
number = {2},
pages = {485--496},
pmid = {20033820},
title = {{Attaining the canopy in dry and moist tropical forests: strong differences in tree growth trajectories reflect variation in growing conditions}},
