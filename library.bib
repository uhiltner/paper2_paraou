title = {{Elements for the expected mechanisms on ‘reduced emissions from deforestation and degradation, REDD' under UNFCCC}},
url = {http://stacks.iop.org/1748-9326/2/i=4/a=045024?key=crossref.dc78336a3ac917e723d75f6700f46c37},
volume = {2},
year = {2007}
